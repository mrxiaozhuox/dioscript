// a = 10
let a = 10;

// c -> b -> a
let b = &a;
let c = &b;

// `10 : 10 : 10`
print(a + " : " + b + " : " + c);

b = b + 1;

// `11 : 11 : 11`
print(a + " : " + b + " : " + c);

// d = 9
let d = 9;

// b -> d | c -> a
b = &d;

// `11 : 9 : 11`
print(a + " : " + b + " : " + c);

// sub scope
if true {

  // a (in sub scope) = 8
  let a = 8;
  // c ( in top scope ) = 7
  c = 7;

  // `8 : 9 : 7`
  print(a + " : " + b + " : " + c);
}

// `7 : 9 : 7`
print(a + " : " + b + " : " + c);
